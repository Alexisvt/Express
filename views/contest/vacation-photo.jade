
extends ../layouts/layout
block title
  | File upload page
append stylesheets
  link(
  rel='stylesheet'
  href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'
  )
block content
  form(class = "form-horizontal"
  role = "form"
  enctype = "multipart/form-data"
  method = "POST"
  action = "/contest/vacation-photo/#{year}/#{month}"
  )
    .form-group
      .col-sm-4
        label(for ="fieldName", class="col-sm-12 control-label") Name
      .col-sm-6
        input(type="text",class="form-control",id="fieldName",name="name")

    .form-group
      .col-sm-4
        label(for ="fieldEmail", class="col-sm-12 control-label") Email
      .col-sm-6
        input(type="email",class="form-control",required,id="fieldEmail",name="fieldEmail")

    .form-group
      .col-sm-4
        label(for ="fieldPhoto", class="col-sm-12 control-label") Vacation photo
      .col-sm-6
        input(
          type="file"
          class="form-control"
          required
          id="fieldPhoto"
          name="photo"
          accept="image/*"
          )

    .form-group
      div(class="col-sm-offset-2 col-sm-5")
        input(type="submit", value="submit" class="btn btn-primary")
